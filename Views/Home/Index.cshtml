@{
    ViewData["Title"] = "Home Page";
    @model TccTest.Models.ViewModel.UploadViewModel;
}
<style>
    body{
            line-height: 0.5 !important;
    }
    .col {
        border: 1px solid rgba(255, 255, 255, 0.25);
        margin: 10px;
        box-shadow: 0 0 1rem 0 rgba(0, 0, 0, .2);
        border-radius: 5px;
        background-color: rgba(255, 255, 255, .15);
        backdrop-filter: blur(5px);
    }

    .hovercol {
        transition: 0.4s;
        min-height: 90px;
        color:white !important;
        
    }
        .hovercol svg a  {
            color: white !important;
        }

        .hovercol:hover svg a {
            color: #000000 !important;
        }
        .hovercol:hover {
            background-color: #fffffffc;
            color: #000000 !important;
        }
      .viewFile {
          position:absolute;
          top: -12px; bottom: 0; left: 0; right: 0;
          margin: auto;
          height: 20px;
          padding:44px;
        }
</style>
<div class="text-center">

    <div class="row ">
        <span id="helpico" class="position-fixed " style=" bottom: 330px; left: 115px">  <img src="~/blob-home.png" width="500" height="600">        </span>

        <div class="col">
            <form asp-action="PostFile" method="post" enctype="multipart/form-data">
                <div class="drag-area">
                    <div class="icon mt-3"><i class="fas fa-cloud-upload-alt"></i></div>
                    @*<header>Drag & Drop to Upload File</header>
                        <span>OR</span>*@
                    @*<button>Browse File</button>*@
                    <label asp-for="NewFile" class="uploadFile my-4">
                        Browse File
                    </label>
                    <input class=" d-none" type="file" asp-for="NewFile">
                    <input type="submit" value="Upload File" class="btn btn-outline-light mb-3" style=" font-size: 21px; font-weight: 400; padding: 1% 12%;" />
                </div>
                @*<script src="/js/script.js"></script>*@
            </form>
        </div>
    </div>
    <div class="row g-4 ">
        <form asp-action="CleareFile" method="post" class=" col hovercol  ms-2 p-0">
            <input class="hoverInput h-100 w-100" style="position: relative; z-index: 999999;" type="submit" value="Clear file" />
            <div style="margin: -51px 169px 0px 0px">
                <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class=" bi bi-trash3-fill" viewBox="0 0 16 16" style=" margin: 0 16px; bottom: 5px; position: relative; ">
                    <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                </svg>
            </div>
        </form>
        <span id="helpico" class="position-fixed " style=" bottom: 261px; right: 212px; z-index: -1;">  <img src="~/blob-home.png" width="300" height="400" style=" -moz-transform: scale(-1, -1); -o-transform: scale(-1, -1); -webkit-transform: scale(-1, -1); transform: scale(-1, -1); ">        </span>
        <div class="col hovercol  me-2 p-0 " style=" position:relative;"> 
            <a class="hoverInput text-decoration-none d-block viewFile" style="z-index:1000 " href="Master.txt" target="_blank">
                View File
            </a>
            <div style="margin: 37px 160px 0px 0px">
                <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class=" bi bi-trash3-fill" viewBox="0 0 16 16" style=" margin: 0 0px; bottom: 5px; position: relative; ">
                    <path d="M5.5 7a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zM5 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5z" />
                    <path d="M9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.5L9.5 0zm0 1v2A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z" />
                </svg>
            </div>
        </div>
    </div>
</div>
